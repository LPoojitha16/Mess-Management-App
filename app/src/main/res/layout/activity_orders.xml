<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Page"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <!-- No Orders Text for Admin -->
        <TextView
            android:id="@+id/tvNoOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Previous Orders Yet"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone" />

        <!-- Order Form for Students -->
        <LinearLayout
            android:id="@+id/layoutOrderForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Item 1: Fried Rice -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@android:color/white"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvFriedRice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fried Rice - ₹50"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnMinusFriedRice"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="−"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvQuantityFriedRice"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:paddingHorizontal="8dp" />

                <Button
                    android:id="@+id/btnPlusFriedRice"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Item 2: Noodles -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@android:color/white"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvNoodles"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Noodles - ₹60"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnMinusNoodles"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="−"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvQuantityNoodles"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:paddingHorizontal="8dp" />

                <Button
                    android:id="@+id/btnPlusNoodles"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:textSize="18sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnGoToCart"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Go to Cart"
                android:background="@android:color/black"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>